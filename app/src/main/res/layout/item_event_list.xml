<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/event_title_top_ll"
        android:background="@color/event_title_selector"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/event_time_tv"
            android:textColor="#ffffff"
            android:paddingStart="18dp"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="40dp"/>
        <TextView
            android:paddingStart="18dp"
            android:gravity="center_vertical"
            android:textColor="#ffffff"
            android:singleLine="true"
            android:id="@+id/event_title_tv"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
    </LinearLayout>
    <View
        android:layout_below="@+id/event_title_top_ll"
        android:id="@+id/bottom_line"
        android:background="@drawable/shape_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:background="#635E5A"
        android:layout_below="@+id/bottom_line"
        android:id="@+id/event_prop_rv"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"/>
</RelativeLayout>