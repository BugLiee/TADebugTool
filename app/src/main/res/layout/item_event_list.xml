<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#3690B8"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_alignParentTop="true"
        android:background="@color/event_title_selector"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:id="@+id/event_title_tv"
        android:layout_width="match_parent"
        android:layout_height="46dp"/>
    <View
        android:layout_below="@+id/event_title_tv"
        android:id="@+id/bottom_line"
        android:background="@drawable/shape_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/bottom_line"
        android:id="@+id/event_prop_rv"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"/>
</RelativeLayout>