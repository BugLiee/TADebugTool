<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#579E5A"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:background="#BC8D8D"
            android:id="@+id/mock_history_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="历史模拟数据"
            android:textColor="#ffffff" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mock_history_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mock_history_title"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:background="#BCB78D"
            android:id="@+id/mock_current_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="模拟发送事件"
            android:textColor="#ffffff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/mock_rg"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/mock_normal_rb"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="一般事件" />

                <RadioButton
                    android:id="@+id/mock_profile_rb"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="用户事件" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mock_appid_tv"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="appID："
                android:textColor="#ffffff" />

            <EditText
                android:id="@+id/mock_appid_et"
                android:singleLine="true"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mock_url_tv"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="serverUrl："
                android:textColor="#ffffff" />

            <EditText
                android:id="@+id/mock_url_et"
                android:singleLine="true"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mock_account_tv"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="accountID："
                android:textColor="#ffffff" />

            <EditText
                android:id="@+id/mock_account_et"
                android:singleLine="true"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mock_distinct_tv"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="distinctID："
                android:textColor="#ffffff" />

            <EditText
                android:id="@+id/mock_distinct_et"
                android:singleLine="true"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mock_event_name_tv"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="eventName："
                android:textColor="#ffffff" />

            <EditText
                android:id="@+id/mock_event_name_et"
                android:singleLine="true"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="3" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/mock_props_header"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="事件属性："
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/mock_current_prop_tv"
                    android:text="当前属性"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="2" />
                <TextView
                    android:id="@+id/mock_add_prop_tv"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="添加属性"
                    android:textColor="#ffffff" />
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:background="#87C8A1"
                android:visibility="gone"
                android:layout_below="@+id/mock_props_header"
                android:id="@+id/mock_props_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>