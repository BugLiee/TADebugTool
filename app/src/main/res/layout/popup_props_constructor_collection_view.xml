<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="5dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#9EB386">

        <RelativeLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/popup_prop_constructor_container_ll"
            android:layout_above="@+id/popup_prop_constructor_bottom_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#9EB386"
            android:orientation="vertical">

            <TextView
                android:id="@+id/popup_prop_constructor_title_tv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="String"
                android:textColor="#764BC3"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#A9CCDC">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="key：" />

                <EditText
                    android:id="@+id/input_prop_key_et"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="3"
                    android:background="@null"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/popup_prop_constructor_input_item_ll"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#B3BCDA">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="value：" />

                <EditText
                    android:id="@+id/input_prop_value_et"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="3"
                    android:background="@null"
                    android:singleLine="true" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/popup_prop_constructor_bottom_ll"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/popup_prop_constructor_add_list_tv"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="@string/add" />
            <TextView
                android:id="@+id/popup_prop_constructor_positive_tv"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="@string/text_positive" />
        </LinearLayout>
        </RelativeLayout>
    </FrameLayout>
</androidx.cardview.widget.CardView>